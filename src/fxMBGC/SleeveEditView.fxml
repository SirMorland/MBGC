<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxMBGC.SleeveEditController">
   <children>
      <Region prefHeight="10.0" VBox.vgrow="NEVER" />
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Name:" />
                  <TextField fx:id="name" onKeyPressed="#onClick" prefWidth="100.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Pc/set:" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="pcPerSet" onKeyPressed="#onClick" HBox.hgrow="ALWAYS" />
                  <Label text="Price/set:" />
                  <TextField fx:id="ePerSet" onKeyPressed="#onClick" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onOk" text="Ok" />
                  <Button mnemonicParsing="false" onAction="#onDelete" text="Delete" />
                  <Button fx:id="errorClose" mnemonicParsing="false" onAction="#onClose" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Region prefHeight="10.0" VBox.vgrow="NEVER" />
   </children>
</VBox>
